@{
}
@{
    ViewData["Title"] = "Quên mật khẩu";
}

<div class="container" style="padding: 50px 0;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">KHÔI PHỤC MẬT KHẨU</h2>

            @if (ViewBag.Error != null)
            {
                    <div class="alert alert-danger">@ViewBag.Error</div>
            }

            @if (ViewBag.Success != null)
            {
                    <div class="alert alert-success">
                    @ViewBag.Success <br>
                        <a href="#">(Sau này nút này sẽ về trang Login)</a>
                    </div>
            }

            <form asp-action="ForgotPassword" method="post" style="border: 1px solid #ddd; padding: 20px; border-radius: 5px;">
                <div class="mb-3">
                    <label>Tên đăng nhập:</label>
                    <input type="text" name="username" class="form-control" required placeholder="Nhập: testuser">
                </div>

                <div class="mb-3">
                    <label>Email đăng ký:</label>
                    <input type="email" name="email" class="form-control" required placeholder="Nhập: test@gmail.com">
                </div>

                <div class="mb-3">
                    <label>Số điện thoại:</label>
                    <input type="text" name="phone" class="form-control" required placeholder="Nhập: 0909123456">
                </div>

                <hr>

                <div class="mb-3">
                    <label style="color:red; font-weight:bold;">Mật khẩu mới:</label>
                    <input type="password" name="newPassword" class="form-control" required>
                </div>

                <button type="submit" class="primary-btn" style="width:100%;">ĐỔI MẬT KHẨU NGAY</button>
            </form>
        </div>
    </div>
</div>