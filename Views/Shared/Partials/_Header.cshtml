<div id="header">
	<!-- container -->
	<div class="container">
		<!-- row -->
		<div class="row">
			<!-- LOGO -->
			<div class="col-md-3">
				<div class="header-logo">
					<a href="#" class="logo">
						<img src="~/img/logo.svg" alt="PhoneStore Logo">
				</a>
			</div>
		</div>
		<!-- /LOGO -->
		
			<!-- SEARCH BAR -->
			@if (ViewData["HideSearchAndNav"] == null || !(bool)ViewData["HideSearchAndNav"])
			{
				<div class="col-md-6">
					<div class="header-search">
						<form asp-controller="Product" asp-action="Index" method="get">
							<input
								class="input"
								type="text"
								name="keyword"
								value="@(ViewBag.Keyword ?? "")"
								placeholder="Search here" />
								
							<!--reset về trang 1 khi search-->
							<input type="hidden" name="page" value="1" />
							<button type="submit" class="search-btn">Search</button>
						</form>
					</div>
				</div>
			}
			else
			{
				<div class="col-md-6"></div>
			}
			<!-- /SEARCH BAR -->
			<!-- ACCOUNT -->
			<div class="col-md-3 clearfix">
				@if (ViewData["HideSearchAndNav"] == null || !(bool)ViewData["HideSearchAndNav"]) //PNSon 18/01/2026 Ẩn Cart khi ở trang Thông tin cá nhân
				{
					<div class="header-ctn">
						<!-- Cart --> 
						<!--NTBinh 14/01/2026-->
						<div class="dropdown">
							@await Component.InvokeAsync("Cart")
						</div>
						<!-- /Cart -->

						<!-- Menu Toogle -->
						<div class="menu-toggle">
							<a href="#">
								<i class="fa fa-bars"></i>
								<span>Menu</span>
							</a>
						</div>
						<!-- /Menu Toogle -->
					</div>
				}
			</div>
			<!-- /ACCOUNT -->
		</div>
		<!-- row -->
	</div>
	<!-- container -->
</div>
<!-- /MAIN HEADER -->
		