@model List<PhoneStore.Models.CartItem>

@{
    ViewData["Title"] = "Thanh toán";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<div class="section">
    <div class="container">
        <form asp-controller="Order" asp-action="PlaceOrder" method="post">
            <div class="row">
                <div class="col-md-7">
                    <div class="billing-details">
                        <div class="section-title">
                            <h3 class="title">ĐỊA CHỈ NHẬN HÀNG</h3>
                        </div>

                        <div class="form-group">
                            <label>Họ và tên người nhận:</label>
                            <input class="input" type="text" name="FullName" placeholder="Nhập họ tên..." required>
                        </div>

                        <div class="form-group">
                             <label>Số điện thoại:</label>
                            <input class="input" type="tel" name="Phone" placeholder="Nhập số điện thoại..." required>
                        </div>

                        <div class="form-group">
                             <label>Địa chỉ giao hàng:</label>
                            <input class="input" type="text" name="Address" placeholder="Số nhà, đường, phường..." required>
                        </div>

                        <div class="form-group">
                             <label>Ghi chú đơn hàng (Tùy chọn):</label>
                            <textarea class="input" name="Note" placeholder="Ví dụ: Giao hàng giờ hành chính"></textarea>
                        </div>
                    </div>
                </div>

                <div class="col-md-5 order-details">
                    <div class="section-title text-center">
                        <h3 class="title">ĐƠN HÀNG CỦA BẠN</h3>
                    </div>
                    <div class="order-summary">
                        <div class="order-col">
                            <div><strong>SẢN PHẨM</strong></div>
                            <div><strong>TỔNG</strong></div>
                        </div>
                        <div class="order-products">
                            @foreach (var item in Model)
                            {
                                    <div class="order-col">
                                        <div>@item.Quantity x @item.ProductName</div>
                                        <div>@item.Total.ToString("n0") đ</div>
                                    </div>
                            }
                        </div>
                        <div class="order-col">
                            <div>Phí vận chuyển</div>
                            <div><strong>Miễn phí</strong></div>
                        </div>
                        <div class="order-col">
                            <div><strong>TỔNG CỘNG</strong></div>
                            <div><strong class="order-total">@ViewBag.TongTienDonHang.ToString("n0") đ</strong></div>
                        </div>
                    </div>

                    <div class="payment-method">
                        <div class="input-radio">
                            <input type="radio" name="payment" id="payment-1" checked>
                            <label for="payment-1">
                                <span></span>
                                Thanh toán khi nhận hàng (COD)
                            </label>
                            <div class="caption">
                                <p>Bạn sẽ thanh toán tiền mặt cho shipper khi nhận được hàng.</p>
                            </div>
                        </div>
                        <div class="input-radio">
                            <input type="radio" name="payment" id="payment-2">
                            <label for="payment-2">
                                <span></span>
                                Chuyển khoản ngân hàng
                            </label>
                            <div class="caption">
                                <p>STK: 123456789 - Ngân hàng MB Bank - NGUYEN VAN A</p>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="primary-btn order-submit" style="width: 100%;">XÁC NHẬN ĐẶT HÀNG</button>
                </div>
            </div>
        </form>
    </div>
</div>