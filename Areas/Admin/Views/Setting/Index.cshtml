@{
    ViewData["Title"] = "Cài đặt hệ thống";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    <i class="fa fa-cog"></i> Cài đặt hệ thống
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-info-circle"></i> Thông tin website
                    </div>
                    <div class="panel-body">
                        <form>
                            <div class="form-group">
                                <label>Tên website</label>
                                <input type="text" class="form-control" value="PhoneStore" />
                            </div>
                            <div class="form-group">
                                <label>Email liên hệ</label>
                                <input type="email" class="form-control" value="contact@phonestore.com" />
                            </div>
                            <div class="form-group">
                                <label>Số điện thoại</label>
                                <input type="text" class="form-control" value="0123456789" />
                            </div>
                            <div class="form-group">
                                <label>Địa chỉ</label>
                                <textarea class="form-control" rows="3">123 Đường ABC, Quận XYZ, TP.HCM</textarea>
                            </div>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-save"></i> Lưu cài đặt
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-image"></i> Logo & Hình ảnh
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Logo website</label>
                            <input type="file" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label>Banner trang chủ</label>
                            <input type="file" class="form-control" />
                        </div>
                        <button type="button" class="btn btn-primary">
                            <i class="fa fa-upload"></i> Upload
                        </button>
                    </div>
                </div>

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <i class="fa fa-share-alt"></i> Mạng xã hội
                    </div>
                    <div class="panel-body">
                        <div class="form-group">
                            <label>Facebook</label>
                            <input type="text" class="form-control" placeholder="https://facebook.com/..." />
                        </div>
                        <div class="form-group">
                            <label>Instagram</label>
                            <input type="text" class="form-control" placeholder="https://instagram.com/..." />
                        </div>
                        <button type="button" class="btn btn-primary">
                            <i class="fa fa-save"></i> Lưu
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
