<script>
    document.addEventListener('DOMContentLoaded', function() {
        const toggleBtn = document.getElementById('toggleCategories');
        const hiddenCategories = document.querySelectorAll('.hidden-category');
        let isExpanded = false;

        if (toggleBtn) {
            toggleBtn.addEventListener('click', function(e) {
                e.preventDefault();
                isExpanded = !isExpanded;

                hiddenCategories.forEach(function(item) {
                    item.style.display = isExpanded ? 'block' : 'none';
                });

                toggleBtn.innerHTML = isExpanded ? 'Thu gọn ▲' : 'Xem thêm ▼';
            });
        }
    });
</script>