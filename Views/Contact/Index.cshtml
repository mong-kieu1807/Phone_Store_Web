@model PhoneStore.Models.Contact
@{
    ViewData["Title"] = "Contact Us";
     ViewData["ActiveMenu"] = "Contact";
}
<!-- SECTION -->
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <div class="billing-details">
                    <div class="section-title">
                        <h3 class="title">Get In Touch</h3>
                    </div>

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }

                    <form asp-controller="Contact" asp-action="Index" method="post">
                        <div class="form-group">
                            <label asp-for="name">Name <span class="text-danger">*</span></label>
                            <input asp-for="name" class="input" placeholder="Enter your name" />
                            <span asp-validation-for="name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="email">Email <span class="text-danger">*</span></label>
                            <input asp-for="email" class="input" placeholder="Enter your email" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="phone">Phone Number</label>
                            <input asp-for="phone" class="input" placeholder="Enter your phone number" />
                            <span asp-validation-for="phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="subject">Subject <span class="text-danger">*</span></label>
                            <input asp-for="subject" class="input" placeholder="Enter subject" />
                            <span asp-validation-for="subject" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="message">Message <span class="text-danger">*</span></label>
                            <textarea asp-for="message" class="input" rows="5" placeholder="Enter your message"></textarea>
                            <span asp-validation-for="message" class="text-danger"></span>
                        </div>
                        <button type="submit" class="primary-btn order-submit">Send Message</button>
                    </form>
                    
                    @section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }
                </div>
            </div>

            <div class="col-md-5">
                <div class="order-details">
                    <div class="section-title text-center">
                        <h3 class="title">Contact Information</h3>
                    </div>
                    <div class="order-summary">
                        <div class="order-col contact-info-row">
                            <div class="contact-info-label"><strong>Address</strong></div>
                            <div class="contact-info-value">65 Huỳnh Thúc Kháng, Phường Bến Nghé, Quận 1, TP. Hồ Chí Minh</div>
                        </div>
                        <div class="order-col contact-info-row">
                            <div class="contact-info-label"><strong>Phone</strong></div>
                            <div class="contact-info-value">0354631234</div>
                        </div>
                        <div class="order-col contact-info-row">
                            <div class="contact-info-label"><strong>Email</strong></div>
                            <div class="contact-info-value">contact@email.com</div>
                        </div>
                        <div class="order-col contact-info-row working-hours-block">
                            <div class="working-hours-header"><strong>Working Hours</strong></div>
                            <div class="working-hours-item">Monday - Friday: 9:00 AM - 8:00 PM</div>
                            <div class="working-hours-item">Saturday: 9:00 AM - 11:00 PM</div>
                            <div class="working-hours-item">Sunday: Closed</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /SECTION -->