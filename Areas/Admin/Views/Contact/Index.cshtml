@model IEnumerable<PhoneStore.Models.Contact>

@{
    ViewData["Title"] = "Quản lý Liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/Layout/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">

        <h1 class="page-header">
            <i class="fa fa-envelope"></i> Quản lý Liên hệ & Góp ý
        </h1>

        @if (TempData["Success"] != null)
        {
                <div class="alert alert-success">@TempData["Success"]</div>
        }

        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-list"></i> Danh sách Liên hệ từ khách hàng
            </div>

            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th style="width:120px">Ngày gửi</th>
                                <th style="width:200px">Họ tên / Email</th>
                                <th>Chủ đề</th>
                                <th style="width:120px">Trạng thái</th>
                                <th style="width:150px">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                            <tr>
                                                <td>@item.created_at?.ToString("dd/MM/yyyy HH:mm")</td>
                                                <td>
                                                    <strong>@item.full_name</strong><br />
                                                    <small class="text-muted">@item.email</small><br />
                                                    <small class="text-muted">@item.phone</small>
                                                </td>
                                                <td>@item.subject</td>
                                                <td class="text-center">
                                            @if (item.status == "Chưa xử lý")
                                            {
                                                            <span class="label label-warning" style="background-color: #f6c23e;">@item.status</span>
                                            }
                                            else if (item.status == "Đang xử lý")
                                            {
                                                            <span class="label label-info" style="background-color: #36b9cc;">@item.status</span>
                                            }
                                            else if (item.status == "Đã phản hồi")
                                            {
                                                            <span class="label label-success" style="background-color: #1cc88a;">@item.status</span>
                                            }
                                            else
                                            {
                                                            <span class="label label-default" style="background-color: #858796;">@item.status</span>
                                            }
                                                </td>
                                                <td class="text-center">
                                                    <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#modalDetails-@item.contact_id">
                                                        <i class="fa fa-edit"></i> Xử lý
                                                    </button>

                                                    <a asp-action="Delete" asp-route-id="@item.contact_id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc chắn muốn xóa liên hệ này?');">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>

                                            <div class="modal fade" id="modalDetails-@item.contact_id" tabindex="-1" role="dialog" aria-hidden="true">
                                                <div class="modal-dialog modal-lg" role="document">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">&times;</span>
                                                            </button>
                                                            <h4 class="modal-title">Chi tiết liên hệ #@item.contact_id</h4>
                                                        </div>
                                                        <form asp-action="UpdateStatus" method="post">
                                                            <div class="modal-body">
                                                                <input type="hidden" name="id" value="@item.contact_id" />

                                                                <div class="row">
                                                                    <div class="col-md-6 form-group">
                                                                        <label><strong>Họ tên:</strong></label>
                                                                        <input type="text" class="form-control" value="@item.full_name" readonly />
                                                                    </div>
                                                                    <div class="col-md-6 form-group">
                                                                        <label><strong>Email:</strong></label>
                                                                        <input type="text" class="form-control" value="@item.email" readonly />
                                                                    </div>
                                                                    <div class="col-md-6 form-group">
                                                                        <label><strong>SĐT:</strong></label>
                                                                        <input type="text" class="form-control" value="@item.phone" readonly />
                                                                    </div>
                                                                    <div class="col-md-6 form-group">
                                                                        <label><strong>Ngày gửi:</strong></label>
                                                                        <input type="text" class="form-control" value="@item.created_at" readonly />
                                                                    </div>
                                                                </div>

                                                                <div class="form-group">
                                                                    <label><strong>Chủ đề:</strong></label>
                                                                    <input type="text" class="form-control" value="@item.subject" readonly />
                                                                </div>

                                                                <div class="form-group">
                                                                    <label><strong>Nội dung tin nhắn:</strong></label>
                                                                    <textarea class="form-control" rows="5" readonly>@item.message</textarea>
                                                                </div>

                                                                <hr />

                                                                <div class="form-group">
                                                                    <label for="statusSelect" class="text-primary font-weight-bold">Cập nhật trạng thái:</label>
                                                                    <select name="status" class="form-control" style="font-weight: bold;">
                                                                @foreach (var st in new[] { "Chưa xử lý", "Đang xử lý", "Đã phản hồi", "Đã đóng" })
                                                                {
                                                                    if (item.status == st)
                                                                    {
                                                                                        <option value="@st" selected>@st</option>
                                                                    }
                                                                    else
                                                                    {
                                                                                        <option value="@st">@st</option>
                                                                    }
                                                                }
                                                                    </select>
                                                                </div>

                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                                                                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                }
                            }
                            else
                            {
                                    <tr>
                                        <td colspan="5" class="text-center">Chưa có dữ liệu liên hệ nào.</td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>
</div>