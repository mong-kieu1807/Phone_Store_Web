@model PhoneStore.Models.User

@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}

<style>
    .register-section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        background: #f8f9fa;
        padding: 40px 0;
    }
    .register-container {
        background: white;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
    }
    .register-left {
        background: linear-gradient(135deg, #D10024 0%, #a00019 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 60px 40px;
        position: relative;
        overflow: hidden;
    }
    .register-left::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: pulse 15s ease-in-out infinite;
    }
    @@keyframes pulse {
        0%, 100% { transform: translate(0, 0); }
        50% { transform: translate(-10%, -10%); }
    }
    .register-right {
        padding: 60px 50px;
        background: #ffffff;
    }
    .register-header {
        margin-bottom: 35px;
        text-align: center;
    }
    .register-header h2 {
        color: #D10024;
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 10px;
    }
    .form-group {
        margin-bottom: 20px;
    }
    .form-group label {
        font-weight: 600;
        color: #2d3436;
        margin-bottom: 8px;
        display: block;
        font-size: 14px;
    }
    .form-control {
        padding: 12px 15px;
        font-size: 15px;
        border: 2px solid #dfe6e9;
        border-radius: 8px;
        transition: all 0.3s;
        width: 100%;
    }
    .form-control:focus {
        border-color: #D10024;
        box-shadow: 0 0 0 0.2rem rgba(209, 0, 36, 0.15);
        outline: none;
    }
    .form-text {
        font-size: 12px;
        color: #b2bec3;
        margin-top: 5px;
    }
    .btn-register {
        width: 100%;
        padding: 15px;
        font-size: 16px;
        font-weight: 600;
        background: #D10024;
        border: none;
        border-radius: 8px;
        color: white;
        transition: all 0.3s;
        cursor: pointer;
    }
    .btn-register:hover {
        background: #a00019;
        transform: translateY(-2px);
        box-shadow: 0 5px 20px rgba(209, 0, 36, 0.3);
    }
    .divider {
        text-align: center;
        margin: 25px 0;
        position: relative;
    }
    .divider::before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        right: 0;
        height: 1px;
        background: #dfe6e9;
    }
    .divider span {
        background: white;
        padding: 0 15px;
        position: relative;
        color: #b2bec3;
        font-size: 14px;
    }
    .login-link {
        text-align: center;
    }
    .login-link p {
        color: #636e72;
        margin-bottom: 5px;
    }
    .login-link a {
        color: #D10024;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s;
    }
    .login-link a:hover {
        color: #a00019;
        text-decoration: underline;
    }
    @@media (max-width: 768px) {
        .register-left {
            display: none;
        }
        .register-right {
            padding: 40px 30px;
        }
    }
</style>

<div class="register-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 col-md-12">
                <div class="register-container">
                    <div class="row g-0">
                        <!-- BÊN TRÁI - HÌNH ĐIỆN THOẠI -->
                        <div class="col-md-5">
                            <div class="register-left">
                                <div class="text-center">
                                    <div class="phone-mockup">
                                        <svg viewBox="0 0 300 600" xmlns="http://www.w3.org/2000/svg" style="max-width: 280px; filter: drop-shadow(0 20px 40px rgba(0,0,0,0.3));">
                                            <!-- Phone Frame -->
                                            <rect x="20" y="10" width="260" height="580" rx="30" fill="#1a1a1a"/>
                                            <rect x="30" y="20" width="240" height="560" rx="25" fill="#fff"/>
                                            
                                            <!-- Notch -->
                                            <rect x="110" y="25" width="80" height="20" rx="10" fill="#1a1a1a"/>
                                            
                                            <!-- Screen Content - Status Bar -->
                                            <g opacity="0.3">
                                                <text x="50" y="40" font-family="Arial" font-size="12" fill="#1a1a1a">9:41</text>
                                                <circle cx="240" cy="35" r="3" fill="#1a1a1a"/>
                                                <circle cx="250" cy="35" r="3" fill="#1a1a1a"/>
                                                <circle cx="260" cy="35" r="3" fill="#1a1a1a"/>
                                            </g>
                                            
                                            <!-- User Plus Icon -->
                                            <g transform="translate(150, 180)">
                                                <circle cx="0" cy="0" r="60" fill="#D10024" opacity="0.1"/>
                                                <circle cx="0" cy="-10" r="20" fill="#fff" stroke="#D10024" stroke-width="3"/>
                                                <path d="M-30,25 Q-30,0 -15,-5 Q0,-10 15,-5 Q30,0 30,25 L30,35 L-30,35 Z" fill="#fff" stroke="#D10024" stroke-width="3"/>
                                                <line x1="35" y1="10" x2="55" y2="10" stroke="#D10024" stroke-width="3" stroke-linecap="round"/>
                                                <line x1="45" y1="0" x2="45" y2="20" stroke="#D10024" stroke-width="3" stroke-linecap="round"/>
                                            </g>
                                            
                                            <!-- App Icons -->
                                            <rect x="50" y="280" width="50" height="50" rx="12" fill="#D10024" opacity="0.8"/>
                                            <rect x="125" y="280" width="50" height="50" rx="12" fill="#D10024" opacity="0.6"/>
                                            <rect x="200" y="280" width="50" height="50" rx="12" fill="#D10024" opacity="0.4"/>
                                            
                                            <rect x="50" y="350" width="50" height="50" rx="12" fill="#1a1a1a" opacity="0.3"/>
                                            <rect x="125" y="350" width="50" height="50" rx="12" fill="#1a1a1a" opacity="0.3"/>
                                            <rect x="200" y="350" width="50" height="50" rx="12" fill="#1a1a1a" opacity="0.3"/>
                                            
                                            <!-- Navigation Bar -->
                                            <rect x="120" y="540" width="60" height="5" rx="3" fill="#1a1a1a" opacity="0.3"/>
                                            
                                            <!-- Side Buttons -->
                                            <rect x="10" y="120" width="8" height="40" rx="2" fill="#2d2d2d"/>
                                            <rect x="10" y="180" width="8" height="60" rx="2" fill="#2d2d2d"/>
                                            <rect x="282" y="150" width="8" height="50" rx="2" fill="#2d2d2d"/>
                                        </svg>
                                    </div>
                                    <h3 style="color: white; margin-top: 40px; font-size: 32px; font-weight: 700; text-shadow: 0 2px 10px rgba(0,0,0,0.3);">
                                        <i class="fa fa-mobile" style="font-size: 36px; margin-right: 10px;"></i>PhoneStore
                                    </h3>
                                    <div style="margin-top: 30px;">
                                        <span style="display: inline-block; padding: 8px 20px; background: rgba(255,255,255,0.2); border-radius: 20px; color: white; font-size: 14px; margin: 5px;">
                                            <i class="fa fa-check"></i> Bảo hành chính hãng
                                        </span>
                                        <span style="display: inline-block; padding: 8px 20px; background: rgba(255,255,255,0.2); border-radius: 20px; color: white; font-size: 14px; margin: 5px;">
                                            <i class="fa fa-truck"></i> Giao hàng nhanh
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- BÊN PHẢI - FORM ĐĂNG KÝ -->
                        <div class="col-md-7">
                            <div class="register-right">
                                <!-- HEADER -->
                                <div class="register-header">
                                    <h2><i class="fa fa-user-plus"></i> Đăng ký tài khoản</h2>
                                </div>

                                <!-- THÔNG BÁO LỖI -->
                                @if (ViewBag.Error != null)
                                {
                                    <div class="alert alert-danger" style="border-radius: 8px; margin-bottom: 20px;">
                                        <i class="fa fa-exclamation-circle"></i> @ViewBag.Error
                                    </div>
                                }

                                <!-- FORM ĐĂNG KÝ -->
                                <form asp-action="Register" method="post">
                                    @Html.AntiForgeryToken()
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <!-- Tên đăng nhập -->
                                            <div class="form-group">
                                                <label>
                                                    <i class="fa fa-user"></i> Tên đăng nhập <span class="text-danger">*</span>
                                                </label>
                                                <input type="text" 
                                                       class="form-control" 
                                                       name="username" 
                                                       asp-for="username" 
                                                       required 
                                                       placeholder="Nhập tên đăng nhập">
                                                <small class="form-text">Dùng để đăng nhập</small>
                                            </div>

                                            <!-- Email -->
                                            <div class="form-group">
                                                <label>
                                                    <i class="fa fa-envelope"></i> Email <span class="text-danger">*</span>
                                                </label>
                                                <input type="email" 
                                                       class="form-control" 
                                                       name="email" 
                                                       asp-for="email" 
                                                       required 
                                                       placeholder="example@email.com">
                                            </div>

                                            <!-- Số điện thoại -->
                                            <div class="form-group">
                                                <label>
                                                    <i class="fa fa-phone"></i> Số điện thoại
                                                </label>
                                                <input type="tel" 
                                                       class="form-control" 
                                                       name="phone" 
                                                       asp-for="phone" 
                                                       placeholder="0123456789">
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <!-- Mật khẩu -->
                                            <div class="form-group">
                                                <label>
                                                    <i class="fa fa-lock"></i> Mật khẩu <span class="text-danger">*</span>
                                                </label>
                                                <input type="password" 
                                                       class="form-control" 
                                                       name="password" 
                                                       asp-for="password" 
                                                       required 
                                                       placeholder="Nhập mật khẩu">
                                                <small class="form-text">Tối thiểu 6 ký tự</small>
                                            </div>

                                            <!-- Họ tên -->
                                            <div class="form-group">
                                                <label>
                                                    <i class="fa fa-id-card"></i> Họ và tên <span class="text-danger">*</span>
                                                </label>
                                                <input type="text" 
                                                       class="form-control" 
                                                       name="full_name" 
                                                       asp-for="full_name" 
                                                       required 
                                                       placeholder="Nhập họ và tên">
                                            </div>

                                            <!-- Địa chỉ -->
                                            <div class="form-group">
                                                <label>
                                                    <i class="fa fa-map-marker"></i> Địa chỉ
                                                </label>
                                                <input type="text" 
                                                       class="form-control" 
                                                       name="address" 
                                                       asp-for="address" 
                                                       placeholder="Nhập địa chỉ">
                                            </div>
                                        </div>
                                    </div>

                                    <!-- BUTTON ĐĂNG KÝ -->
                                    <div class="form-group" style="margin-top: 25px;">
                                        <button type="submit" class="btn btn-register">
                                            <i class="fa fa-user-plus"></i> ĐĂNG KÝ NGAY
                                        </button>
                                    </div>

                                    <!-- DIVIDER -->
                                    <div class="divider">
                                        <span>Hoặc</span>
                                    </div>

                                    <!-- LINK ĐĂNG NHẬP -->
                                    <div class="login-link">
                                        <p>
                                            Đã có tài khoản? 
                                            <a asp-action="Login">
                                                <i class="fa fa-sign-in"></i> Đăng nhập ngay
                                            </a>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
