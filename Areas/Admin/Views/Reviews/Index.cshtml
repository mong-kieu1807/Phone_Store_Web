@model IEnumerable<PhoneStore.Models.ReviewAdminViewModel>
@* NTBinh 19/01/2026 *@
@{
    ViewData["Title"] = "Quản lý Đánh giá";
}

<div id="page-wrapper">
    <div class="container-fluid">

        <h1 class="page-header">
            <i class="fa fa-comments"></i> Quản lý Đánh giá & Bình luận
        </h1>

        <div class="panel panel-default">
            <div class="panel-heading">
                <i class="fa fa-list"></i> Danh sách đánh giá từ khách hàng
            </div>

            <div class="panel-body">

                <div class="table-responsive">
                    <table class="table table-striped table-bordered" width="100%">
                        <thead>
                            <tr>
                                <th style="width:120px">Ngày gửi</th>
                                <th style="width:150px">Khách hàng</th>
                                <th style="width:200px">Sản phẩm</th>
                                <th style="width:100px">Đánh giá</th>
                                <th>Nội dung bình luận</th>
                                <th style="width:100px">Trạng thái</th>
                                <th style="width:150px">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                    <tr>
                                        <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@item.UserFullName</td>
                                        <td>@item.ProductName</td>
                                        <td>
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= item.Rating)
                                            {
                                                            <span class="text-warning">&#9733;</span>
                                            }
                                            else
                                            {
                                                            <span class="text-muted">&#9734;</span>
                                            }
                                        }
                                        </td>
                                        <td>@item.Comment</td>
                                        <td>
                                        @if (item.Status == 1)
                                        {
                                                    <span class="label label-success">Đang hiện</span>
                                        }
                                        else
                                        {
                                                    <span class="label label-danger">Đang ẩn</span>
                                        }
                                        </td>
                                        <td>
                                            <a asp-action="ToggleStatus" asp-route-id="@item.ReviewId"
                                               class="btn btn-sm @(item.Status == 1 ? "btn-warning" : "btn-info")">
                                            @(item.Status == 1 ? "Ẩn đi" : "Duyệt bài")
                                            </a>

                                            <a asp-action="Delete" asp-route-id="@item.ReviewId"
                                               class="btn btn-sm btn-danger"
                                               onclick="return confirm('Bạn có chắc chắn muốn xóa bình luận này không?');">
                                                Xóa
                                            </a>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (!Model.Any())
                {
                        <div class="alert alert-info text-center mt-3">
                            Chưa có đánh giá nào.
                        </div>
                }

            </div>
        </div>
    </div>
</div>
@* NTBinh 19/01 *@