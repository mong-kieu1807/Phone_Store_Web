@model IEnumerable<PhoneStore.Models.ReviewAdminViewModel>

@{
    ViewData["Title"] = "Quản lý Đánh giá";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Quản lý Đánh giá & Bình luận</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách đánh giá từ khách hàng</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th style="width: 120px;">Ngày gửi</th>
                            <th style="width: 150px;">Khách hàng</th>
                            <th style="width: 200px;">Sản phẩm</th>
                            <th style="width: 100px;">Đánh giá</th>
                            <th>Nội dung bình luận</th>
                            <th style="width: 100px;">Trạng thái</th>
                            <th style="width: 150px;">Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>@item.UserFullName</td>
                                    <td>@item.ProductName</td>
                                    <td>
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        if (i <= item.Rating)
                                        {
                                            <span class="text-warning">&#9733;</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">&#9734;</span>
                                        }
                                    }
                                    </td>
                                    <td>@item.Comment</td>
                                    <td>
                                    @if (item.Status == 1)
                                    {
                                                <span class="badge bg-success text-white">Đang hiện</span>
                                    }
                                    else
                                    {
                                                <span class="badge bg-secondary text-white">Đang ẩn</span>
                                    }
                                    </td>
                                    <td>
                                        <a asp-action="ToggleStatus" asp-route-id="@item.ReviewId" 
                                           class="btn btn-sm @(item.Status == 1 ? "btn-warning" : "btn-info") mb-1">
                                        @(item.Status == 1 ? "Ẩn đi" : "Duyệt bài")
                                        </a>

                                        <a asp-action="Delete" asp-route-id="@item.ReviewId" 
                                           class="btn btn-sm btn-danger mb-1" 
                                           onclick="return confirm('Bạn có chắc chắn muốn xóa bình luận này không?');">
                                            Xóa
                                        </a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                    <div class="alert alert-info text-center mt-3">
                        Chưa có đánh giá nào.
                    </div>
            }
        </div>
    </div>
</div>